{
  "name": "codex-monorepo",
  "private": true,
  "description": "Tools for repo-wide maintenance.",
  "scripts": {
    "format": "prettier --check \"{.,.github,codex-cli/src,codex-cli/tests}/**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:fix": "prettier --write \"{.,.github,codex-cli/src,codex-cli/tests}/**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "lint": "eslint \"codex-cli/{src,tests}/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"codex-cli/{src,tests}/**/*.{ts,tsx}\" --fix",
    "dev": "pnpm --filter @openai/codex run dev",
    "test": "pnpm --filter @openai/codex run test",
    "test:watch": "pnpm --filter @openai/codex run test:watch",
    "typecheck": "pnpm --filter @openai/codex run typecheck",
    "build": "pnpm --filter @openai/codex run build",
    "build:dev": "pnpm --filter @openai/codex run build:dev",
    "release:readme": "cp README.md codex-cli/README.md",
    "release:version": "pnpm --filter @openai/codex run release:version",
    "release": "pnpm run release:readme && pnpm run release:version && pnpm run build && cd codex-cli && pnpm publish"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8.0.0"
  },
  "resolutions": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "semver": "^7.7.1",
    "punycode": "^2.3.1"
  }
}
