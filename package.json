{
  "name": "codex-monorepo",
  "private": true,
  "description": "Tools for repo-wide maintenance.",
  "scripts": {
    "release": "pnpm --filter @openai/codex run release",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "build": "pnpm --filter @openai/codex run build",
    "test": "pnpm --filter @openai/codex run test",
    "typecheck": "pnpm --filter @openai/codex run typecheck",
    "changelog": "git-cliff --config cliff.toml --output CHANGELOG.ignore.md $LAST_RELEASE_TAG..HEAD",
    "prepare": "husky",
    "husky:add": "husky add"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "git-cliff": "^2.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1"
  },
  "resolutions": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "semver": "^7.7.1"
  },
  "overrides": {
    "punycode": "^2.3.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{json,md,yml}": "biome format --write",
    "**/*.{js,ts,tsx}": [
      "biome check --apply",
      "pnpm --filter @openai/codex run typecheck"
    ]
  },
  "packageManager": "pnpm@10.8.1"
}
